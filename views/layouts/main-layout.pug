                            li(class=(path === '/pa02' ? 'active' : ''))
                                a(href="/pa02") PA02
                            li(class=(path === '/pa03' ? 'active' : ''))
                                a(href="/pa03") PA03
                            li(class=(path === '/pa04' ? 'active' : ''))
                                a(href="/pa04") PA04

        .jumbotron.text-center
            .container
                h1 #{title}
                block intro

        .container
            block content