extends ../../../layouts/main-layout

block styles
    link(rel="stylesheet", type="text/css", href="/stylesheets/form.css")
    link(rel="stylesheet", type="text/css", href="/stylesheets/product-list.css")

block intro
    p Parsing JSON Files

block content
    main

        form.form(action="/ta03", method="POST")
            label(for="search") Search Our Products:
            input(type="text", name="input")#search
            button.btn(type="submit") Search

        each item in content
            .product-area
                .product-tile
                    .product-caption
                        h3 #{item.name}
                    .product-image-area
                        img.product-image(src=item.imageUrl)
                    .product-info-area
                        h4 Description:
                        p #{item.description}
                        h4 Price:
                        p #{item.price}


