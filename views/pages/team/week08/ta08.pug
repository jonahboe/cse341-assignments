extends ../../../layouts/main-layout

block styles
    link(rel="stylesheet", type="text/css", href="/stylesheets/product-list.css")

block intro
    p Practicing Pagination

block content
    main

        each item in content
            .product-area
                .product-tile
                    .product-caption
                        h3 #{item.name}
                    .product-image-area
                        img.product-image(src=item.imageUrl)
                    .product-info-area
                        h4 Description:
                        p #{item.description}
                        h4 Price:
                        p #{item.price}

        section.pagination
            if hasBack
                a.btn.btn-primary(href=("/ta08/?page=" + (parseInt(page) - 1)), style="margin:40px") Back
            if hasNext
                a.btn.btn-primary(href=("/ta08/?page=" + (parseInt(page) + 1)), style="margin:40px") Next
            h4 Page #{page} of #{pageCount}